footer
    width 100%
    height: 100%
    .footer_container
        padding 90px 20px 0px 20px
        display: flex
        justify-content: center
        align-items: center
        text-align: center
        flex-direction: column
        .footer_box
            width: 100%
            font-weight: 900
            display: flex
            justify-content: left
            align-items: flex-start 
            text-align: left
            flex-wrap: wrap
            .footer_location,.footer_services,.recent_blog,.social-networks
                width: 33.3333333%
                line-height: 2
                padding 0px 50px
                display: flex
                flex-direction: column
                p
                    a
                        text-decoration: none
                        color color-letter
                h2
                    margin-bottom: 20px
                ul
                    margin-top -7px
                    li  
                        line-height: 1.7
                        padding: 0%
                        margin: 0%
                        list-style none
                        a
                            text-decoration: none
            .social-networks
                width: 100%
                text-align: center
                height: 50px !important
                margin-top 30px
                background: color-first
                ul
                    margin-top 0px
                    height: 100%
                    list-style: none
                    text-align: center
                    justify-content: center
                    align-items: center
                    display: flex
                    flex-wrap: wrap
                    li 
                        list-style: none
                        width: fit-content
                        margin 0px 10px
                        a
                            color white !important
            .footer_legal
                width: 100%
                text-align: center
                margin-bottom: 0px
                ul
                    display: flex   
                    list-style: none
                    text-align: center
                    justify-content: center
                    margin-bottom: 0px
                    li 
                        margin 0px 8px
                        a
                            font-size: 12px
                            text-decoration: none
                            margin-bottom: 0px

                    

