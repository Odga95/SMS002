.banner_box2
  flex-direction: row-reverse

.banner_cards
  width: 100%
  height: 100%
  padding: 40px 40px
  display: flex
  justify-content: center
  align-items: center
  flex-wrap: wrap
  h2
    text-align: center
    margin: 20px

  .card_box
    height: 350px
    width: 290px
    border-radius 10px
    overflow: hidden
    -webkit-box-shadow: 0px 7px 10px 3px rgba(0,0,0,0.5)
    margin 20px
    .card_img
      width: 100%
      height: 68%
      position: relative
      img
        width: 100%
        height: 100%
        object-fit: cover
        z-index: -1
      .card_info
        opacity: 0
        width: 100%
        height: 100%
        position: absolute
        top 0
        left: 0   
        font-size: 70%
        display -webkit-box
        -webkit-line-clamp 5
        -webkit-box-orient vertical
        overflow hidden
        text-overflow ellipsis
        padding: 120px 20px
        transition 0.3s
        color white
    .card_text 
      width: 100%
      height: 32%
      padding: 20px 
      display: flex
      justify-content: center
      align-items: center
      transition 0.4s
      .card_title
        width: 70% !important
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        overflow hidden
        text-overflow ellipsis
        font-size: 85%
      .card_icon 
        width: 30%
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        border-radius: 100%
        transition 0.4s
        color white
      .card_icon:hover
        background: rgba(0, 0, 255, 0.836)
  .card_box:hover .card_info
    opacity: 1
    background: rgba(56, 56, 56, 0.164)
  .card_box:hover .card_text
    background: color-first
    color white
  .card_box:hover .card_icon 
    background: white
    color color-first

.banner_calidad,.banner_marcas 
  width: 100%
  height: 100%
  padding: 40px
  display: flex
  flex-wrap: wrap
  align-items: center
  justify-content: center
  h2
    text-align: center
  
  .marca_container
    width: 250px
    height: 150px
    margin 0px 30px
    img
      width 100%
      height: 100%
      border-radius 20px
      object-fit: cover
      -webkit-filter: grayscale(100%);
      filter: grayscale(100%);

  .calidad_box
    margin 30px
    width: 33%
    height: 300px
    display: flex
    justify-content: center
    .calidad_icon
      width 20%
      height: 100%
      padding: 20px 0px
    .calidad_text
      width: 80%
      height: 100%
      font-size: 80%
      h2
        text-align: left


// BLOG

.blog_container 
  width: 75%
  height: 100%
  padding: 50px 70px
  display flex
  flex-direction: column
  align-items: center

  .blog_box
    width: 100%
    height: 100%
    .divide
      margin-top 40px
      margin-bottom:40px
      border-bottom: 0.4px dotted rgb(177, 177, 177)

    
    .box_container
      display: flex
      flex-direction: column
      justify-content: left
      align-items: flex-start
      flex-direction: row

      .blog_img
        width: 30%
        height: 250px
        padding: 0px 10px
        img
          width: 100%
          height: 100%
          border-radius 10px
          object-fit: cover
      .blog_text
        width: 70%
        height: 100%
        padding: 0px 10px
        h2
          font-size: 110%
        .blog_info
          width: 100%
          height: 100%
          display: flex
          font-size: 65%
          color color-letter
          padding: 0px 15px
          .blog_category,
          .blog_tag,
          .blog_date,
          .blog_autor
            font-weight: 600
            display: flex
            margin-right: 5px
            margin-left:5px
            align-items: flex-end
          p
            margin-right: 15px
            margin-left:5px
            font-weight: 400
            font-size: 80%

        .blog_paragrph
          font-size: 70%
          line-height: 1.9
          font-style italic
          margin-top 20px
          width: 100%
          height:120px
          display -webkit-box
          -webkit-line-clamp 4
          -webkit-box-orient vertical
          overflow hidden
          text-overflow ellipsis

    .box_link   
      margin-left 30%
      .blog_button
        border none
        border-radius 10px
        padding: 15px
        font-weight: 600
        transition 0.4s
      :hover
        background: gray 
        color white  

      .fa-share
        text-decoration none
        border-radius 100%
        border 0.5px solid gray
        padding: 11px
        margin-left: 40px
        transition 0.4s
