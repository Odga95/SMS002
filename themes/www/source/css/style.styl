.cabecera_button
  width: fit-content
  height: fit-content
  text-align: left
  margin-bottom:auto
  margin-top: 15px
  border-radius 10px

.cabecera_button-contact
  width: fit-content
  height: auto
  padding: 15px 3px
  border: none;
  font-weight: 600
  border-radius 10px
  box-shadow:inset 2px 2px 2px 0px rgba(255,255,255,.5),
  7px 7px 20px 0px rgba(0,0,0,.1),
  4px 4px 5px 0px rgba(0,0,0,.1);
  transition: 0.5s
  font-size: font-s
  @media movil-xs
    font-size: font-m
    padding: 20px 5px

.cabecera_button-contact:hover
  background: transparent

.cabecera_aside
  height: 100% !important
  width:60%
  position: absolute
  top 0
  right:0
  z-index: -1
  overflow: hidden
  .cabecera_aside_img
    width: 100%
    height: 100%
    img
      width: 100%
      height: 100%
      border-radius 100%
      -webkit-transform:scale(6);
      transform:scale(6)
      transition: 1s
      margin-left: 250%
      @media movil
        width: 100%
        height: 100%
        border-radius 100%
        -webkit-transform:scale(3);
        transform:scale(3)
        transition: 1s
        margin-left: 100%
        margin-right: auto
      @media tablet
        width: 100%
        height: 100%
        -webkit-transform:scale(2.4);
        transform:scale(2.4)
        border-radius 100%
        display: block
        margin-left: 70%
        margin-right: auto
